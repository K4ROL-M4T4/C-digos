/* Karol Mata
Programa Promedio Ciclo */
#include <stdio.h>
int main(){
	int num_alumnos, calificacion, sumatoria, contador;
	float promedio;
	scanf("%d", &num_alumnos);
	sumatoria=0;
	contador=1;
	while(contador<=num_alumnos){
		scanf("%d", &calificacion);
		sumatoria=sumatoria+calificacion;
		contador=contador+1;
	}
	promedio=sumatoria/num_alumnos;
	printf("%.2f", promedio);
	return 0;
}
